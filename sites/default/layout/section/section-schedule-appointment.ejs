<section class="section <%- section.type.replace('-', '--') %> <% if(section.background_type) { %><%= section.background_type %> <% } %>" <% if(section.background_image){ %> style="background-image:url('<%- url_for( page.theme.images + section.background_image.desktop ) %>');background-size: cover; background-repeat: no-repeat;" <% } %>>

    <% if(section.background_image.mobile){ %>
        <div class="section__background-mobile show-for-small-only" style="background-image:url('<%- url_for( page.theme.images + section.background_image.mobile ) %>');"></div>
     <% } %>

    <div class="row">
        <div class="small-12 large-12 columns">
            <h2 class="section__header headline <%- section.headline.type %>"><%- section.headline.text %></h2>
            <div class="schedule__appt flexbox items-center content-center">
                <a v-bind:href="'tel:'+sitePhone+''" class="appt__cta__phone" v-if="sitePhone" data-analytics-element-clicked="" data-analytics-type="NUMBER" data-analytics-text="CALL" data-analytics-location="BANNER" data-analytics-position="" data-analytics-outcome="CLICKTOCALL">
                    <i class="ss-phone"></i>
                    <div class="cta__phone-mobile-txt">Tap to call</div>
                    <span v-text="sitePhone"></span>
                </a>
                <div class="t-align-center" v-else>
                    <div class="loader loader--small" v-cloak></div>
                </div>
                <button
                    class="button button--secondary tt-u"
                    v-on:click="openModal('showAppointmentModal')"
                    v-if="allowingSiteScheduling"><%- section.button %><i class="ss-navigateright"></i></button>
            </div>
        </div><!-- /.columns -->

    </div><!-- /.row -->

</section><!-- /.section -->
